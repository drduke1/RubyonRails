	</div>
	
	<div class="span3 pagination-centered">
		<%= link_to (image_tag "/img/products/logos_and_graphics/certified_reseller_logo.jpg", alt: "Logos"), action: "index", filter: "certified" %>
		<h5>Certified Reseller Logos</h5>
	</div>
	
	<div class="span3 pagination-centered">
		<%= link_to (image_tag "/img/logos_and_graphics.png", alt: "Graphics and Misc."), action: "index", filter: "graphics" %>
		<h5>Graphics</h5>
	</div>
</div>